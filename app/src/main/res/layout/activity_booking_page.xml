<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="zhang.zhixuan.mobileapp_airline.BookingPage">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">


        <LinearLayout
            android:id="@+id/bk_ln"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <FrameLayout
                android:id="@+id/bk_fl_itn"
                android:layout_width="fill_parent"
                android:layout_height="200dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/bk_rl_bkDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:text="Contact Person Details: "
                   />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Title: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <Spinner
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:entries="@array/title"
                        android:prompt="@string/title_prompt"
                        android:id="@+id/bk_sp_title"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="First Name: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_fn"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Last Name: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_sn"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Address: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_ad"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Country: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_co"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="City: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_ci"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Email: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_em"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="ZipCode: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_zp"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Contact Number: "
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/bk_et_cn"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content" />
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="pay"
        android:text="Pay" />

</LinearLayout>
