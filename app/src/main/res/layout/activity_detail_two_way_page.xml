<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zhang.zhixuan.mobileapp_airline.DetailPage">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/detail_linearR"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <FrameLayout
                android:id="@+id/detail_fl_itnR"
                android:layout_width="fill_parent"
                android:layout_height="200dp">

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/detail_relative_outboundR"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_frame1R">

                <TextView
                    android:id="@+id/detail_tv_outboundR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outbound"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_tv_outDateR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Tue Oct 13 2015"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_relative_divideLine1R"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/detail_tv_outboundR"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/detail_outboundContentR"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_relative_divideLine1R"
                    android:text="Text"
                    android:textSize="20sp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/detail_relative_inboundR"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_relative_outboundR">

                <TextView
                    android:id="@+id/detail_tv_inboundR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inbound"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_tv_inDateR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Tue Oct 20 2015"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_relative_divideLine2R"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/detail_tv_inboundR"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/detail_inboundContentR"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_relative_divideLine2R"
                    android:text="Text"
                    android:textSize="20sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="book"
        android:text="Confirm Booking" />
</LinearLayout>
