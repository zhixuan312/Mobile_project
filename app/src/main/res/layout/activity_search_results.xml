<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    tools:context="zhang.zhixuan.mobileapp_airline.SearchResults">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sr_ll1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="new test"

            android:layout_height="match_parent"
            android:id="@+id/sr_tv_ori" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="new text"
            android:layout_height="match_parent"
            android:id="@+id/sr_tv_dest"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sr_ll1"
        android:id="@+id/sr_ll2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/sr_tv_depD"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/sr_tv_retD"
            />
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sr_ll2"
        android:id="@+id/sr_lv"
        />



</RelativeLayout>
